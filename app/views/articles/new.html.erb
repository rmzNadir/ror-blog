<div style="width: 80%; margin: 0 auto;">
    <h1>Nuevo artículo</h1>
<%= form_for(@article) do |f| %>
<div class="field">
    <%= f.text_field :title, placeholder: "Título", class: "form-control form-item" %>
</div>
<div class="field">
    <%= f.text_area :body, placeholder: "Escribe aquí tu artículo", class: "form-control form-item form-article-area" %>
</div>
<div class="field">
    <%= f.submit "Guardar", class: "form-submit" %>
</div>
<%end%>
</div>